{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./build",                       
        "strict": true,
        "strictPropertyInitialization": false,  
        "moduleResolution": "node",            
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src"],
    "exclude": ["build"]
}
